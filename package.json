{
    "name": "@nativescript-community/ui-webview",
    "version": "0.0.0",
    "scripts": {
        "setup": "ts-patch install",
        "tsc": "cp src/webview.d.ts plugin && tsc -skipLibCheck -d",
        "build": " \\cp README.md plugin/ && rm -f .tsbuildinfo && npm run tsc",
        "build.angular": "ng-packagr -p ./src/angular/package.json -c ./src/angular/tsconfig.json",
        "publish": "npm run setup && npm run build && npm run build.angular && lerna publish",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "demo.ios": "npm i && npm run tsc && cd demo && tns run ios",
        "demo.android": "npm i && npm run tsc && cd demo && tns run android",
        "clean.demo": "rimraf demo/hooks demo/node_modules demo/platforms",
        "clean": "rimraf plugin/ios plugin/android plugin/**/*.d.ts plugin/**/*.js plugin/**/*.js.map plugin/node_modules plugin/package-lock.json",
        "plugin.watch.tsc": "npm run tsc -- -w",
        "plugin.watch.android": "npm i && npm-watch build.android",
        "plugin.watch.ios": "npm i && npm-watch build.ios",
        "plugin.watch": "npm run plugin.watch.tsc & npm run plugin.watch.android & npm run plugin.watch.ios"
    },
    "devDependencies": {
        "@angular/animations": "~10.1.1",
        "@angular/common": "~10.1.1",
        "@angular/compiler": "~10.1.1",
        "@angular/compiler-cli": "~10.1.1",
        "@angular/core": "~10.1.1",
        "@angular/forms": "~10.1.1",
        "@angular/platform-browser": "~10.1.1",
        "@angular/platform-browser-dynamic": "~10.1.1",
        "@angular/router": "~10.1.1",
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@nativescript/angular": "^10.1.0",
        "@nativescript/core": "7.0.0",
        "@nativescript/types-android": "7.0.2",
        "@nativescript/types-ios": "7.0.1",
        "@nativescript/webpack": "~3.0.1",
        "@types/node": "^14.6.4",
        "@typescript-eslint/eslint-plugin": "4.0.1",
        "@typescript-eslint/parser": "4.0.1",
        "eslint": "7.8.1",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "nativescript-vue": "^2.8.1",
        "ng-packagr": "~10.1.0",
        "npm-watch": "^0.7.0",
        "prompt": "^1.0.0",
        "rimraf": "^3.0.2",
        "rxjs": "6.6.2",
        "ts-patch": "1.3.0",
        "typescript": "~3.9.7"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nativescript-community/ui-webview.git"
    },
    "author": {
        "name": "Martin Guillon",
        "email": "martin@akylas.fr"
    },
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/nativescript-community/ui-webview/issues"
    },
    "homepage": "https://github.com/nativescript-community/ui-webview#readme",
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "dependencies": {
        "ts-node": "^9.0.0"
    }
}
