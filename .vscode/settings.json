{
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/tests/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/demo/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/src/native*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/src/webview-ext{-common,.android,.ios,.*webview}.d.ts": {
      "when": "$(basename).ts"
    },
    "**/src/**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.metadata.json": true
  }
}
