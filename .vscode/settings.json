{
  "[typescript]": {
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true
  },
  "files.watcherExclude": {
    "{test,demo}/**/platforms": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules": true,
    "**/node_modules/**/*": true,
    "**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/*.js": {
      "when": "$(basename).ts"
    }
  },
  "files.exclude": {
    "{test,demo}/**/platforms": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.metadata.json": true,
    "**/CVS": true,
    "**/node_modules": true,
    "**/node_modules/**/*": true
  },
}
